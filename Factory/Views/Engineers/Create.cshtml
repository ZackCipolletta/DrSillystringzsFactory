@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h1 class="text-center">Add a new engineer</h1>
<hr>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)<br>
  <p>@Html.TextBoxFor(model => model.Name)</p>
  <p class="text-danger">@Html.ValidationMessageFor(model => model.Name)</p>
  @Html.LabelFor(model => model.Details)<br>
  <p>@Html.TextBoxFor(model => model.Details)</p>
  <p class="text-danger">@Html.ValidationMessageFor(model => model.Details)</p>

  <input type="submit" value="Add new engineer" class="btn btn-primary mt-1" />
}  
<br>
<hr class="my-2">
<p class="nav">@Html.ActionLink("Show all engineers", "Index")</p>