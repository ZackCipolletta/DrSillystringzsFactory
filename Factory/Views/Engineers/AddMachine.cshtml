@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h1 class="text-center">Add a machine</h1>
<hr>
<h4>Add a machine to: @Html.DisplayFor(model => model.Name)</h4>
<br>
@using (Html.BeginForm())
{
  if((int)@ViewBag.MachineCount == 0)
  {
    <p>No machines have been added yet!</p>
  }
  else
  {
    @Html.HiddenFor(model => model.EngineerId)

    @Html.Label("Select machine")<br>
    <p>@Html.DropDownList("MachineId")</p>

    <input type="submit" value="Save" />
  }
}
<br>
<hr class="my-2">
<p class="nav">@Html.ActionLink("Back to list", "Index")</p>