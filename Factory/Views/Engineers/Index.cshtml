@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1 class="text-center">Engineers</h1>
<hr>
@if (@Model.Count == 0)
{
  <h3>No engineers have been added yet!</h3>
}
<ul>
@foreach (Engineer engineer in Model)
{
  <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })</li>
}
</ul>
<br>

<hr class="my-2">
<p class="nav">@Html.ActionLink("Add new engineer", "Create")</p>
<p class="nav">@Html.ActionLink("Home", "Index", "Home")</p>
