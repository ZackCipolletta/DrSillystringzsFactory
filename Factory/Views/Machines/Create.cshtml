@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

@* <p><strong>NOTE:</strong> You need to have at least one category before you can add an machine!</p> *@
@* <p>Go to @Html.ActionLink("this page", "Create", "Categories") to create a category.</p> *@
<h2 class="text-center">Add a new machine</h2>
<hr>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)<br>
  <p>@Html.TextBoxFor(model => model.Name)</p>
  @Html.LabelFor(model => model.Description)<br>
  <p>@Html.TextBoxFor(model => model.Description)</p>
  <p style="white-space: pre-line"></p>
  <input type="submit" value="Add new machine" class="btn btn-primary" />
}
<br>
<hr class="my-2">
<p class="nav ">@Html.ActionLink("Show all machines", "Index")</p>